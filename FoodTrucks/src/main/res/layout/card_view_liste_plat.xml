<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView

        android:id="@+id/card_view_liste_plat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/loader_plat"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="@dimen/icon_plat_liste_width"
                    android:layout_height="@dimen/icon_plat_liste_height"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    />

                <ImageView
                    android:id="@+id/image_plat"
                    android:layout_width="@dimen/icon_plat_liste_width"
                    android:layout_height="@dimen/icon_plat_liste_height"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:visibility="visible"
                    android:src="@mipmap/photonotavailable"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/title_plat_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?android:selectableItemBackground"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textSize="@dimen/text_label"
                android:ellipsize="end"
                android:singleLine="true"
                android:padding="4dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>